{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "build_and_publish:local, build:local"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "build:local": {
      "dependsOn": ["^build:local"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "build_and_publish:local": {
      "dependsOn": ["^build_and_publish:local"]
    }
  }
}
